<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/darkBlue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Left Arrow Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical">

            <!-- Left Arrow Button -->
            <ImageButton
                android:id="@+id/leftArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_left"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp" />

            <!-- Toolbar Title (Optional, can be removed or adjusted as needed) -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"

                android:fontFamily="@font/inter_semibold"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:padding="10dp" />

            <!-- Right Arrow Button -->
            <ImageButton
                android:id="@+id/rightArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_right"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>


    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarHome"
        android:background="@color/darkBlue"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@android:color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabHari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabMinggu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minggu" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabBulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulan" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabTahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahun" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/financeInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabLayout"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="0dp"
        android:layout_marginBottom="10dp"> <!-- Adjust margin as needed -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/financeInfo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="-10dp">

                <!-- Pemasukan -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemasukan"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textPemasukan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/greenIncome"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- Pengeluaran -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textPengeluaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/redOutcome"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- Saldo -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/textSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 0"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#777272"
                        android:textSize="13sp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>


    <!-- Content Area -->

    <!-- Bottom Navigation Bar -->

    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/financeInfoCard"
        android:layout_marginTop="1dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Add a View to create space at the bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

</FrameLayout>